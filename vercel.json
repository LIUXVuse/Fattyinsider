{
  "version": 2,
  "builds": [
    {
      "src": "vercel_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9",
        "installCommand": "pip install -r requirements-vercel.txt --target /var/task"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "vercel_app.py",
      "headers": {
        "Cache-Control": "s-maxage=0"
      }
    }
  ],
  "functions": {
    "vercel_app.py": {
      "maxDuration": 60
    }
  },
  "env": {
    "APP_ENV": "production",
    "PYTHONPATH": "/var/task",
    "USE_PINECONE": "true"
  }
} 